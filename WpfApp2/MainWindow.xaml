<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="Ajedrez" Height="800" Width="800">

    <Grid>
        <Border BorderThickness="10" BorderBrush="Black">
            <UniformGrid Name="ChessBoard" Rows="8" Columns="8"/>
        </Border>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0">
            <TextBlock Name="TurnoTextBlock" Text="Turno de las piezas azules" FontSize="20" HorizontalAlignment="Center"/>
            <TextBlock Name="GameOverTextBlock" Text="" FontSize="20" HorizontalAlignment="Center" Foreground="Red"/>
        </StackPanel>
    </Grid>
</Window>